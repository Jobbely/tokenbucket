<?xml version="1.0" encoding="UTF-8" ?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         stopOnFailure="true">
    <testsuites>
        <testsuite name="TokenBucket Test Suite">
            <directory suffix="Test.php" phpVersion="5.3.0" phpVersionOperator=">=">tests/TokenBucket/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src/TokenBucket/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="log/phpunit_report" lowUpperBound="35"
             highLowerBound="70"/>
    </logging>
</phpunit>